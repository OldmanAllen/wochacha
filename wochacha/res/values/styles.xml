<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:windowAnimationStyle">@style/activity_animation</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#404751</item>
    </style>

    <style name="AppTheme2" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/EnterpriseMyActionBar</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:windowAnimationStyle">@style/activity_animation</item>
    </style>

    <style name="EnterpriseMyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#F2F2F4</item>
    </style>

    <style name="SplashTheme" parent="@android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/welcome</item>
        <!-- <item name="android:windowAnimationStyle">@style/activity_animation</item> -->
    </style>

    <style name="NoEnterAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
    </style>

    <style name="activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_to_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_to_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_to_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_to_right_out</item>
    </style>

    <style name="maintabs_tab_style">
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@color/maintabs_tab_bar_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">-5dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="headline_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/headline_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/clear_color</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="indicator_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_style.light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_style.bold">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    
      <style name="text_style.scandetail">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="right_action_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/ic_right_arrow</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="message_tab_style">
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@color/maintabs_tab_bar_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>