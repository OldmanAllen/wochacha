<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" android:background="@drawable/bg_grid_item" >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_name"
        style="@style/text_style.bold"
        android:layout_below="@id/iv_icon"
        android:layout_centerHorizontal="true"
        android:text="@string/action_example" >
    </TextView>

    <TextView
        android:id="@+id/tv_new_message_count"
        style="@style/text_style.bold"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_new_message_count"
        android:gravity="center"
        android:padding="2dp"
        android:text="99"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

</RelativeLayout>