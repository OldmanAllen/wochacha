<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" android:minHeight="80dp" >

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/v_top"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:background="#D6D3CE" >
        </View>

        <ImageView
            android:id="@+id/iv_process_indicator"
            android:layout_width="@dimen/process_current_indicator_size"
            android:layout_height="@dimen/process_current_indicator_size"
            android:layout_below="@id/v_top"
            android:layout_centerHorizontal="true"
            android:scaleType="fitStart"
            android:src="@drawable/process_current" />

        <View
            android:id="@+id/v_bottom"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_process_indicator"
            android:layout_centerHorizontal="true"
            android:background="#D6D3CE" >
        </View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingLeft="5dp"
         >

        <TextView
            android:id="@+id/tv_text1"
            style="@style/text_style.scanhistory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
          	android:layout_marginTop="5dp" android:singleLine="true"
            android:text="Test" />

        <TextView
            android:id="@+id/tv_text2"
            style="@style/text_style.scanhistory.sub"
            android:layout_below="@id/tv_text1" android:singleLine="true"
            android:layout_marginTop="5dp" 
            android:text="Test2" />

        <View android:id="@+id/v_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:background="#D6D3CE" >
        </View>

        <TextView
            android:id="@+id/tv_time" android:layout_above="@id/v_bottom_line"
            style="@style/text_style.scanhistory.sub"
            android:layout_below="@id/tv_text2" android:layout_alignLeft="@id/tv_text2"
            android:layout_marginTop="5dp"
            android:text="Test3" />
    </RelativeLayout>

</LinearLayout>